<?xml version="1.0" encoding="UTF-8" ?>
<schema name="terminologies" version="1.6">
  <!-- ================================================
       Field Type Definitions
       ================================================ -->
  <types>
    <!-- A non-tokenized string: used for IDs and keywords -->
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
    <fieldType name="long" class="solr.LongPointField" positionIncrementGap="0"/>
    <fieldType name="boolean" class="solr.BoolField"/>

    <fieldType name="text" class="solr.TextField" positionIncrementGap="100" termVectors="true">
      <analyzer type="index">
        <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-specials.txt" />
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <!-- divide words in components, useful for compound words -->
        <filter class="solr.WordDelimiterGraphFilterFactory"
                generateWordParts="1"
                generateNumberParts="1"
                catenateWords="1"
                catenateNumbers="1"
                catenateAll="0"
                splitOnCaseChange="1"/>
        <!-- Reduce syntactical complex structures -->
        <filter class="solr.FlattenGraphFilterFactory"/>
        <!-- Normalize unicode (e.g. à → a) -->
        <filter class="solr.ICUFoldingFilterFactory"/> It needs to be installed!
        <!-- Protect key words from stemming -->
        <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
        <!-- Stemming with snowball algorithm for english -->
        <filter class="solr.SnowballPorterFilterFactory" language="English"/>
        <filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
      </analyzer>
      <analyzer type="query">
        <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-specials.txt" />
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <!-- Expansion Synonims -->
        <filter class="solr.SynonymGraphFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
        <filter class="solr.WordDelimiterGraphFilterFactory"
                generateWordParts="1"
                generateNumberParts="1"
                catenateWords="0"
                catenateNumbers="0"
                catenateAll="0"
                splitOnCaseChange="1"/>
        <filter class="solr.ICUFoldingFilterFactory"/>
        <filter class="solr.KeywordMarkerFilterFactory" protected="protwords.txt"/>
        <filter class="solr.SnowballPorterFilterFactory" language="English"/>
        <filter class="solr.RemoveDuplicatesTokenFilterFactory"/>
      </analyzer>
    </fieldType>

    <!-- Case-insensitive, untokenized keyword -->
    <fieldType name="lc_keyword" class="solr.TextField" positionIncrementGap="100">
      <analyzer>
        <tokenizer class="solr.KeywordTokenizerFactory"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldType>

    <!-- Date type: based on ISO 8601 -->
    <fieldType name="pdate" class="solr.TrieDateField" precisionStep="0" positionIncrementGap="0"/>

    <!-- Integer type -->
    <fieldType name="pint" class="solr.TrieIntField" precisionStep="0" positionIncrementGap="0"/>
  </types>

  <!-- ================================================
       Field Definitions
       ================================================ -->
  <fields>
    <!-- SolrCloud-->
    <field name="_version_" type="long" indexed="true" stored="true" multiValued="false"/>

    <!-- Unique Identifier -->
    <field name="id" type="string" indexed="true" stored="true" required="true"/>

    <!-- ACCESS uri  -->
    <field name="access_type_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- ADDRESS field  -->
    <!-- Exact keywords, facet/filter friendly (case-insensitive) -->
    <field name="address_code_s"     type="lc_keyword" indexed="true" stored="true"/>
    <field name="address_country_s"  type="lc_keyword" indexed="true" stored="true"/>
    <field name="address_locality_s" type="lc_keyword" indexed="true" stored="true"/>
    <field name="address_region_s"   type="lc_keyword" indexed="true" stored="true"/>
    <field name="address_street_s"   type="lc_keyword" indexed="true" stored="true"/>

    <!-- API field  -->
    <field name="api_type_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="api_url_ss"  type="string" indexed="false" stored="true" multiValued="true"/>

    <!-- CONTACT field  -->
    <field name="contact_email_s" type="lc_keyword" indexed="true" stored="true"/>

    <!-- DISPLAY field -->
    <field name="display_hideNotation_b"      type="boolean" indexed="true" stored="true"/>
    <field name="display_numericalNotation_b" type="boolean" indexed="true" stored="true"/>

    <!-- EXAMPLES field -->
    <field name="examples_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- FORMAT field  -->
    <field name="format_type_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="format_group_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- altlLabel field -->
    <field name="alt_labels_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- contributor field -->
    <field name="contributor_uri_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="contributor_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- created field-->
    <field name="created_dt" type="pdate" indexed="true" stored="true"/>

    <!-- creator field-->
    <field name="creator_uri_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="creator_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- definition field -->
    <field name="definition_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- distributions field -->
    <field name="distributions_download_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="distributions_format_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>
    <field name="distributions_mimetype_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- extent field -->
    <field name="extent_s" type="string" indexed="true" stored="true" multiValued="false"/>

    <!-- languages field -->
    <field name="languages_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- notation field -->
    <field name="notation_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- notationExamples field -->
    <field name="notation_examples_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- notationPattern field -->
    <field name="notation_pattern_s" type="string" indexed="false" stored="true" multiValued="false"/>

    <!-- partOf field -->
    <field name="listed_in_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- prefLabel field -->
    <field name="pref_labels_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    
    <!-- publisher field -->
    <field name="publisher_uri_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="publisher_labels_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- startDate field -->
    <field name="start_date_i" type="pint" indexed="true" stored="true"/>

    <!-- subjectOf field -->
    <field name="subject_of_url_ss" type="string" indexed="false" stored="true" multiValued="true"/>
    <field name="subject_of_host_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>

    <!-- subject field -->
    <field name="subject_uri" type="string" indexed="false" stored="true" multiValued="true"/>
    <field name="subject_notation" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_scheme" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_labels_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_broader_uri_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_broader_notation_ss" type="lc_keyword" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_topconceptof_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_type_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="subject_context_ss" type="string" indexed="false" stored="true" multiValued="true"/>

    <!-- Multivalued Dewey Decimal Classifications -->
    <field name="ddc_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="ddc_root_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="ddc_ancestors_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- modified field -->
    <field name="modified_dt" type="pdate" indexed="true" stored="true"/>

    <!-- URL field -->
    <field name="url_s" type="string" indexed="false" stored="true"/>

    <!-- Title sorting -->
    <field name="title_sort" type="lc_keyword" indexed="true" stored="true"/>

    <!-- Multivalued type field -->
    <field name="type_uri" type="string" indexed="true" stored="true" multiValued="true"/>

    <field name="title_search" type="text" indexed="true" stored="false" multiValued="true"/>

    <!-- License type  -->
    <field name="license_type_ss" type="string" indexed="true" stored="true" multiValued="true"/>
    <field name="license_group_ss" type="string" indexed="true" stored="true" multiValued="true"/>

    <!-- Full record -->
    <field name="fullrecord" type="string" indexed="false" stored="true" multiValued="false"/>

    <!-- namespace -->
    <field name="namespace_s" type="string" indexed="true" stored="true"/>

    <!-- identifier -->
    <field name="identifier_ss" type="string" indexed="true" stored="true"  multiValued="true"/>


  </fields>

  <!-- ================================================
       Dynamic Field Definitions
       ================================================ -->
  <dynamicField name="alt_label_*" type="text" indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="contributor_*" type="text" indexed="true"  stored="true" multiValued="true"/>
  <dynamicField name="creator_*" type="text"   indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="definition_*" type="text" indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="pref_label_*" type="text" indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="publisher_*" type="text" indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="subject_label_*" type="text" indexed="true" stored="true" multiValued="true"/>
  <dynamicField name="title_*" type="text" indexed="true" stored="true"/>
  <dynamicField name="type_label_*" type="text" indexed="true" stored="true"/>

  <dynamicField name="*_s" type="string" indexed="true" stored="true"/>
  <dynamicField name="*_i" type="pint" indexed="true" stored="true"/>
  <dynamicField name="*_dt" type="pdate" indexed="true" stored="true"/>

  <!-- ================================================
       Copy Field Definitions
       ================================================ -->
  <!-- Create a catch-all searchable field -->
  <field name="allfields" type="text" indexed="true" stored="false" multiValued="true"/>

  <!-- Copy several fields into the catch-all field -->
  <!-- Make address searchable without affecting facet buckets -->
  <copyField source="address_*" dest="allfields"/>
  <copyField source="alt_label_*" dest="allfields"/>
  <copyField source="alt_labels_ss" dest="allfields"/>
  <copyField source="contributor_*" dest="allfields"/>
  <copyField source="contributor_ss" dest="allfields"/>
  <copyField source="creator_*" dest="allfields"/>
  <copyField source="creator_ss" dest="allfields"/>
  <copyField source="defintion_*" dest="allfields"/>
  <copyField source="definition_ss" dest="allfields"/>
  <copyField source="examples_ss" dest="allfields"/>
  <copyField source="notation_ss" dest="allfields"/>
  <copyField source="publisher_label_*" dest="allfields"/>
  <copyField source="publisher_labels_ss" dest="allfields"/>
  <copyField source="prefLabel_*" dest="allfields"/>
  <copyField source="pref_labels_ss" dest="allfields"/>
  <copyField source="subject_label_*" dest="allfields"/>
  <copyField source="subject_notation" dest="allfields"/>
  <copyField source="title_*" dest="allfields"/>
  <copyField source="title_*" dest="title_search"/>
  <copyField source="type_label_*" dest="allfields"/>


  <!-- ================================================
       Schema Configuration
       ================================================ -->
  <uniqueKey>id</uniqueKey>
</schema>
